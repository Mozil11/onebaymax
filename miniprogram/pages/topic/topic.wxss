.topic-list {
  padding: 48rpx 0 0;
}

.list-item {
  width: 303rpx;
  margin-bottom: 60rpx;
  margin-left: 48rpx;
  float: left;
  overflow: hidden;
}

.topic-img {
  width: 303rpx;
  height: 303rpx;
  border-radius: 12rpx;
}

.topic-name-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0rpx;
  font-size: 15px;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


/* 订阅按钮 */

.btn-box image {
  width: 80rpx;
  height: 40rpx;
  display: block;
}

/* 专题描述 */

.topic-brief {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #959595;
}
